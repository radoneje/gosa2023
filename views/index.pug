            })
            document.querySelector(".langWr").onclick = (e) => {
                e.preventDefault()
                e.stopPropagation();
                lang = lang == "ru" ? "en" : "ru";
                updateState(true);
                document.querySelector(".lang").innerHTML=(lang == "ru" ? "ENG" : "RUS");
            }

            wr.onclick = (e) => {
                e.preventDefault();
                e.stopPropagation();
                player.muted(false);
                player.controls(true);
            }
            updateState();
            setInterval(updateState, 60 * 1000)

            async function updateState(force) {
                try {
                    let res = await fetch("/gosa2023/state")
                    if (res.ok) {
                        let dt = await res.json()
                        if (state != dt.state || force) {
                            state = dt.state
                            dt.items.forEach(item => {
                                if (item.id == state) {
                                    player.src(item[lang].src, "application/vnd.apple.mpegurl");
                                    let poster = item[lang].poster;
                                    player.poster_ = item[lang].poster;
                                    setTimeout(() => {
                                        wr.style.opacity = 1;
                                    }, 200)

                                }
                            })
                        }
                    }
                } catch (e) {
                    console.warn(e)
                }

            }


